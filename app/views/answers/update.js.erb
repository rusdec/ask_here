<% if @result %>
  findAnswerData('<%= @answer.id %>').textContent = '<%= j @answer.body %>'
  toggleVisibleAnswer('<%= @answer.id %>')

  updateAnswerAttachements('<%= @answer.id %>', '<%= j render 'answer_attachements', resource: @answer %>')
  updateEditAnswerForm('<%= @answer.id %>', '<%= j render 'edit_fast', resource: @answer %>')
<% else %>
  document.querySelector('#edit_answer_errors').insertAdjacentHTML('afterbegin', '<%= j render 'shared/errors', resource: @answer %>')
<% end %>
