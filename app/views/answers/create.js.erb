<% if @answer.persisted? %>
  document.querySelector('.answers').insertAdjacentHTML('beforeend', '<%= j render @answer %>')
  listenClickLinkEditAnswer('<%= @answer.id %>')
  listenClickLinkCancelEditAnswer('<%= @answer.id %>')
<% else %>
  document.querySelector('#create_answer_errors').insertAdjacentHTML('afterbegin', '<%= j render 'shared/errors', resource: @answer %>')
<% end %>

