.question
  h3.title = @question.title
  p.body = @question.body

- if current_user&.author_of?(@question)
  = render 'edit_fast'
  = question_remote_links(@question)

  ul.question_attachements
    - @question.attachements.each do |attachement|
      li = link_to attachement.file.file.filename, attachement.file.url
  

.answers
  = render @question.created_answers

div
  - if current_user
    = form_for [@question, @answer], remote: true do |f|
      #create_answer_errors
      = f.label :body
      = f.text_area :body
      = f.submit
