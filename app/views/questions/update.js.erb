<% if @question.errors.any? %>
  updateQuestionErrors('<%= j render 'shared/errors', resource: @question %>')
<% else %>
  updateQuestionErrors()
  updateQuestionTitle(document.querySelector('#question_title').value)
  updateQuestionBody(document.querySelector('#question_body').value)
  toggleVisibleQuestion()

  updateQuestionEditForm('<%= j render 'update_form', resource: @question %>')
  updateQuestionAttachements('<%= j render 'shared/attachements', resource: @question.attachements %>')

  listenClickLinkCancelEditQuestion()
<% end %>
